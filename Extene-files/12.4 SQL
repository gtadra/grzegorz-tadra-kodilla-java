# 12.4.1
SELECT  i.NAME, u.DESCRIPTION FROM ISSUES u
JOIN ISSUESLISTS i on u.ISSUESLIST_ID = i.ID;

#12.4.2

SELECT i.FIRSTNAME, i.LASTNAME, u.DESCRIPTION FROM ISSUES u
JOIN USERS i on i.ID = u.USER_ID_ASSIGNEDTO
ORDER BY i.LASTNAME

#12.4.3
SELECT i.FIRSTNAME, i.LASTNAME, COUNT(u.DESCRIPTION) FROM ISSUES u
JOIN USERS i on i.ID = u.USER_ID_ASSIGNEDTO
GROUP BY i.FIRSTNAME, i.LASTNAME
